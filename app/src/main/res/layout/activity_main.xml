<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white"
    android:padding="24dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/appLogo"
                android:layout_width="250dp"
                android:layout_height="120dp"
                android:layout_marginBottom="24dp"
                android:src="@drawable/logo"
                android:contentDescription="logo"
                android:scaleType="centerInside"
                android:importantForAccessibility="no" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginBottom="24dp"
                android:elevation="4dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:gravity="center_horizontal">

                    <!-- Title -->
                    <TextView
                        android:id="@+id/updateTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Update Available"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="12dp" />

                    <!-- Description -->
                    <TextView
                        android:id="@+id/updateMessage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="A new version of the app is available. Please click the button below to update and get the latest features."
                        android:textAlignment="center"
                        android:textColor="@color/gray_text"
                        android:textSize="15sp"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="24dp" />


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/updateBtn"
                        android:onClick="updateService"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:text="Update Now"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        app:cornerRadius="12dp"
                        app:backgroundTint="#027606"
                        app:icon="@drawable/baseline_security_update_24"
                        app:iconPadding="0dp"
                        app:iconTint="@color/white" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Optional Footer Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Version@Latest"
                android:textColor="@color/gray_text"
                android:textSize="13sp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
